{
  "name": "changesets-gitlab",
  "version": "0.3.0",
  "type": "module",
  "repository": "git+https://github.com/rx-ts/changesets-gitlab.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "changesets-gitlab": "lib/cli.js"
  },
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f cjs",
    "build:ts": "tsc -p tsconfig.lib.json",
    "cli": "node --loader ts-node/esm src/cli.ts",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "typecov": "type-coverage"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@changesets/assemble-release-plan": "^5.0.0",
    "@changesets/config": "^1.6.0",
    "@changesets/parse": "^0.3.8",
    "@changesets/types": "^4.0.0",
    "@gitbeaker/node": "^32.1.2",
    "@manypkg/get-packages": "^1.1.1",
    "@sentry/node": "^6.11.0",
    "commander": "^8.1.0",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "global-agent": "^3.0.0",
    "human-id": "^2.0.1",
    "js-yaml": "^4.1.0",
    "markdown-table": "^3.0.1",
    "mdast-util-to-string": "^3.1.0",
    "micromatch": "^4.0.4",
    "remark-parse": "^10.0.0",
    "remark-stringify": "^10.0.0",
    "resolve-from": "^5.0.0",
    "semver": "^7.3.5",
    "unified": "^10.1.0"
  },
  "devDependencies": {
    "@1stg/common-config": "^2.3.1",
    "@changesets/changelog-github": "^0.4.1",
    "@changesets/cli": "^2.16.0",
    "@pkgr/rollup": "^2.0.1",
    "@types/global-agent": "^2.1.1",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.3",
    "@types/micromatch": "^4.0.2",
    "jest": "^27.0.6",
    "postcss": "^8.3.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "type-coverage": "^2.18.2",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "prettier": "^2.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
