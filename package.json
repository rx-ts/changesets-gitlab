{
  "name": "changesets-gitlab",
  "version": "0.5.1",
  "type": "module",
  "repository": "git+https://github.com/rx-ts/changesets-gitlab.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "changesets-gitlab": "lib/cli.js"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f cjs",
    "build:ts": "tsc -p tsconfig.lib.json",
    "cli": "node --loader ts-node/esm src/cli.ts",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "typecov": "type-coverage"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@changesets/assemble-release-plan": "^5.0.4",
    "@changesets/config": "^1.6.3",
    "@changesets/errors": "^0.1.4",
    "@changesets/parse": "^0.3.10",
    "@changesets/pre": "^1.0.7",
    "@changesets/read": "^0.5.0",
    "@changesets/types": "^4.0.0",
    "@gitbeaker/node": "^35.1.0",
    "@manypkg/get-packages": "^1.1.3",
    "@sentry/node": "^6.16.1",
    "commander": "^8.3.0",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "global-agent": "^3.0.0",
    "human-id": "^3.0.0",
    "js-yaml": "^4.1.0",
    "markdown-table": "^3.0.2",
    "mdast-util-to-string": "^3.1.0",
    "micromatch": "^4.0.4",
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "resolve-from": "^5.0.0",
    "semver": "^7.3.5",
    "unified": "^10.1.1"
  },
  "devDependencies": {
    "@1stg/lib-config": "^4.1.2",
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@types/global-agent": "^2.1.1",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/micromatch": "^4.0.2",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "type-coverage": "^2.19.0",
    "typescript": "^4.5.4"
  },
  "resolutions": {
    "prettier": "^2.5.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
