{
  "name": "changesets-gitlab",
  "version": "0.1.0",
  "type": "module",
  "repository": "git+https://github.com/rx-ts/changesets-gitlab.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "changesets-gitlab": "bin/cli.js"
  },
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "files": [
    "lib",
    "!lib/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f cjs",
    "build:ts": "tsc",
    "cli": "node --loader ts-node/esm src/cli.ts",
    "lint": "eslint . --cache -f friendly",
    "prepare": "patch-package && simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "typecov": "type-coverage"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@gitbeaker/node": "^32.1.1",
    "@manypkg/get-packages": "^1.1.1",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "global-agent": "^3.0.0",
    "mdast-util-to-string": "^3.1.0",
    "remark-parse": "^10.0.0",
    "remark-stringify": "^10.0.0",
    "resolve-from": "^5.0.0",
    "semver": "^7.3.5",
    "unified": "^10.1.0"
  },
  "devDependencies": {
    "@1stg/common-config": "^2.3.1",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@pkgr/rollup": "^2.0.0",
    "@types/global-agent": "^2.1.1",
    "patch-package": "^6.4.7",
    "ts-node": "^10.2.0",
    "type-coverage": "^2.18.0",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "prettier": "^2.3.2"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
